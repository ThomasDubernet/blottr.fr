    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "code:quality": "npm run format && npm run lint:fix && npm run typecheck",
    "code:check": "npm run format:check && npm run lint && npm run typecheck",
    "post-dev": "npm run code:quality",
    "pre-commit": "npm run code:check",
    "quality:gates": "bash scripts/quality-gates.sh",
    "quality:pre": "bash scripts/quality-gates.sh pre-implementation",
    "quality:dev": "bash scripts/quality-gates.sh development",
    "quality:int": "bash scripts/quality-gates.sh integration",
    "quality:prod": "bash scripts/quality-gates.sh production-readiness",
    "quality:runner": "node -r ts-node-maintained/register tests/quality/quality_gates.runner.ts",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
