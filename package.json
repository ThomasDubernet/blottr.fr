  "scripts": {
    "start": "node bin/server.js",
    "build": "node ace build",
    "dev": "node ace serve --hmr",
    "test": "node ace test",
    "test:coverage": "node ace test --coverage",
    "test:accessibility": "node ace test tests/quality/accessibility.test.ts",
    "test:performance": "node ace test tests/quality/performance.test.ts",
    "test:integration": "node ace test tests/quality/integration.test.ts",
    "test:playwright": "playwright test --config=playwright.config.ts",
    "test:auth": "playwright test --config=tests/playwright/auth.config.ts",
    "test:auth-flows": "playwright test tests/playwright/auth-flows.spec.ts",
    "test:navbar": "playwright test tests/playwright/navbar-auth.spec.ts",
