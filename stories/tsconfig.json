{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["vite/client", "@storybook/types"]
  },
  "include": ["./**/*.ts", "./**/*.tsx", "./**/*.stories.*"],
  "exclude": ["node_modules"]
}