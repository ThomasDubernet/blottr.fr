#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Check code formatting and linting
echo "ğŸ“ Checking code formatting with Prettier..."
if ! npm run format:check; then
  echo "âŒ Code formatting issues found. Auto-fixing..."
  npm run format
  echo "âœ… Code formatted successfully."
fi

echo "ğŸ”§ Running ESLint checks..."
if ! npm run lint; then
  echo "âŒ ESLint issues found. Auto-fixing..."
  npm run lint:fix
  echo "âœ… ESLint issues fixed."
fi

echo "ğŸ“‹ Running TypeScript type checking..."
if ! npm run typecheck; then
  echo "âŒ TypeScript errors found. Please fix them before committing."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"